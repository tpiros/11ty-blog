{{#reverseByDate collections.posts}}{{/reverseByDate}}
{{#each collections.posts }}
<div class="post-preview">
  <a href="{{ data.page.url }}">
    <h2 class="post-title">
      {{ data.title }}
    </h2>
    <h3 class="post-subtitle">
      {{ data.description }}
    </h3>
  </a>
  <p class="post-meta">Posted by <span style="background-image: url('https://res.cloudinary.com/tamas/image/upload/f_auto,q_auto,w_26,h_26,c_thumb,g_face/v1568271400/tamas.jpg');"></span> {{ data.author }} on {{ formatDate data.date }}.</p>
</div>
<hr>
{{/each}}